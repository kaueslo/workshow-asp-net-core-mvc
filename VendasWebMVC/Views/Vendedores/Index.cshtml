@model IEnumerable<VendasWebMVC.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Criar" class="btn btn-default">Novo Vendedor</a>
</p>

<p>Página index dos vendedores</p>

<table class="table table-striped table-hover">

    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
        
            <th>@Html.DisplayNameFor(model => model.Email)</th>
        
            <th>@Html.DisplayNameFor(model => model.dtAniversario)</th>
            
            <th>@Html.DisplayNameFor(model => model.Salario)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(itemModel => item.Nome)
            </td>

            <td>
                @Html.DisplayFor(itemModel => item.Email)
            </td>

            <td>
                @Html.DisplayFor(itemModel => item.dtAniversario)
            </td>

            <td>
                @Html.DisplayFor(itemModel => item.Salario)
            </td>

            <td><a asp-action="Editar" asp-route-id="@item.Id>">Editar</a></td>
            <td><a asp-action="Detalhes" asp-route-id="@item.Id>">Detalhes</a></td>
            <td><a asp-action="Deletar" asp-route-id="@item.Id">Deletar</a></td>
        </tr>
        }

    </tbody>foreach

</table>

